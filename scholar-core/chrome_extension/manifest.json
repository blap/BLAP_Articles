{
    "manifest_version": 3,
    "name": "ScholarCore Connector",
    "version": "1.0",
    "description": "Salva metadados de p√°ginas web no ScholarCore.",

    "permissions": [
        "activeTab",
        "nativeMessaging"
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"]
        }
    ],

    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Salvar no ScholarCore"
    },

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
